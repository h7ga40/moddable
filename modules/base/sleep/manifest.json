		"sleep": "$(MODULES)/base/sleep/sleep",
	},
	"preload": "sleep",
	"platforms": {
		"gecko": {
			"modules": {
				"*": "$(MODULES)/base/sleep/gecko/*"
			},
		},
		"gr_rose": {
			"modules": {
				"*": "$(MODULES)/base/sleep/gr_rose/*"
			},
		},
